<div class="container">
  <div class="row">
    <div class="span9">
    	<h1>Welcome to DBlog</h1>

      <div id="banner">
         <%= image_tag("blue1x1.png") %>
      </div>

			<%  @global_published_articles.each do |article| %>
				<h3><%= link_to article.title, article %></h3>
				<article>
          <div class='published_date'><%= article.updated_at %></div>
          <% unless article.pictures[0].name.blank? %>
            <img src=<%= article.pictures[0].name_url %> alt="article_image"/>
          <% end %>
          <%= sanitize(article.content.truncate(1000, separator: '</p>')) %>
				<article>
			<% end %>

      <%= paginate @global_published_articles %>
    </div>

    <div class="span3">
      <h4>Categories</h4>
      <ul class="nav nav-sidebar">
        <% @categories.each do |category|  %>
          <li><a href="#"><%= category.name %></a></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>


